{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2018",
    "sourceMap": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true
  },
  "include": [
    "index.mjs",
    "**/*.ts"
  ],
  "exclude": ["node_modules/", "dist/", "*.d.ts", "*.mjs"]
}
